<Window x:Class="RegEnforcer.RegFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RegEnforcer"
        Title="RegEnforcer" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Select Folder" Click="SelectFolderMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <ScrollViewer VerticalScrollBarVisibility="Auto" FontFamily="Cascadia Mono" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <StackPanel x:Name="RegFilesStackPanel" Margin="10">
                <!-- Content will be added dynamically -->
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>

